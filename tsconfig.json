{
  "compileOnSave": false,
  "compilerOptions": {
    "module": "esnext",
    "preserveConstEnums": true,
    "removeComments": true,
    "skipLibCheck": true,
    "lib": [
      "dom",
      "es2016"
    ],
    "target": "ES5",
    "noImplicitAny": true,
    "allowJs": true,
    "outDir": "./build/",
    "jsx": "preserve",
    "sourceMap": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "strictNullChecks": false,
    "noEmit": true
  },
  "exclude": [
    "node_modules",
    "build"
  ],
  "include": [
    "src", "src/shared/interfaces/typings/sib-api-v3-sdk/index.d.ts"
  ]
}
